
@{
    ViewBag.Title = "Chitietsanpham_QA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!--TĐH-->
    <div class="page-notification">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li @*class="breadcrumb-item"*@><a href="~/Home/Index">Trang chủ</a></li>
                            <li @*class="breadcrumb-item"*@><a>Chi tiết sản phẩm</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End-->
    <!--?  Details start -->
    <div class="directory-details pt-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="gallery-img">
                        <div class="row">
                            <div class="col-lg-11">
                                <div class="popular-product ">
                                    <div class="single-product mb-50">
                                        <div class="location-img">
                                            <img src="~/assets/img/gallery/@Model.Hinh" alt="">
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="Product-info">

                        <h4 style="font-size: 30px; font-weight: bold;  font-family:'Times New Roman', Times, serif; ">@Model.TenSp</h4>


                        <hr />
                        <h3 style=" font-size: 20px; font-weight: 100; font-family: 'Times New Roman', Times, serif; ">
                            Giá bán: @Model.DonGia VNĐ
                        </h3>
                        <hr />
                        <h3 style=" font-family: 'Times New Roman', Times, serif;">
                            Màu sắc
                        </h3>
                        <hr />
                        <h3 style=" font-family: 'Times New Roman', Times, serif; ">
                            Kích thước
                        </h3>

                        <hr />
                        <a href="@Url.Action("ThemGioHang","Giohang" ,new { ms=Model.MaSP, url=Request.Url.ToString()})" class="btn btn-primary" role="button" style="font-style: normal; margin-bottom: 20px; ">
                            <span class="glyphicon glyphicon-shopping-cart "
                                  aria-hidden="true"> </span> Thêm vào giỏ hàng
                            <a href="~/HOME/Trang_QA/?id=1" class="btn btn-success" role="button">Trở về</a>


                        </a>
                        <hr />

                        <h3 style=" font-family: 'Times New Roman', Times, serif; margin-bottom: 50px;">

                            Mô tả chi tiết: @Html.Raw(@Model.MoTa.ToString().Replace("\n", "<br>"))
                        </h3>
                        <h3 style=" font-family: 'Times New Roman', Times, serif; margin-bottom: 50px;">

                            Ngày cập nhật: @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")

                        </h3>


                        @*<ul>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Mô tả chi tiết<span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li class="list-group-item">
                                        </li>
                                    </ul>
                                </li>
                            </ul>*@

                    </div>
                </div>
            </div>

            <hr />
            <div class="row ">
                <div class="col-xl-12 col-lg-8 col-md-10">
                    <div class="section-tittle mb-50">
                        <h2 style="font:bold; text-align:center; color:#923761;">
                            SẢN PHẨM LIÊN QUAN
                        </h2>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container1">
                    <div class="row">
                        @foreach (var product in ViewBag.lq)
                        {
                            <div class="box">
                                <a href="@Url.Action("Chitietsanpham","HOME",new { id= product.MaSP})">
                                    <img src="~/assets/img/gallery/@product.Hinh" />
                                    <span style="color:#000000;">@product.TenSp</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>





