
@{
    ViewBag.Title = "Trang_GD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using MWCF_Shop.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>



<main style="font-family:'Times New Roman';">
    <!--TĐH-->
    <div class="page-notification">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li><a href="~/Home/Index">Trang chủ</a></li>
                            <li><a href="#">Giày & Dép</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- listing Area Start -->
    <div class="category-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-7 col-lg-8 col-md-10">
                    <div class="section-tittle mb-50">
                        <h2 style="font:bold;">
                            @*<a href="~/HOME/Trang_QA/?id=1">*@
                            GIÀY & DÉP
                            @*</a>*@
                        </h2>

                    </div>
                </div>

            </div>

            <div class="row">
                <!--? Left content -->
                <div class="col-xl-3 col-lg-3 col-md-4 ">
                    <!-- Job Category Listing start -->
                    <div class="category-listing mb-50">
                        <!-- single one -->
                        <div class="single-listing">



                            @Html.Action("LoaiGDPartial", "HOME", new { id = 3 })

                        </div>
                    </div>
                    <!-- Job Category Listing End -->

                </div>


                <!--?  Right content -->
                <div class="col-xl-9 col-lg-9 col-md-8 ">

                    <!--? New Arrival Start -->
                    <div class="new-arrival new-arrival2">
                        <div class="row">
                            @foreach (var product in Model)
                            {
                                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                                    <div class="single-new-arrival mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                                        <div class="popular-img">
                                            <a href="@Url.Action("Chitietsanpham","HOME",new { id= product.MaSP, id1= product.MaLoai})">
                                                <div class="popular-product ">
                                                    <div class="single-product mb-50">
                                                        <div class="location-img">
                                                            <img src="~/assets/img/gallery/@product.Hinh" alt="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                            <div class="favorit-items">
                                                <!-- <span class="flaticon-heart"></span> -->
                                                <a href="@Url.Action("ThemGiohang", "Giohang", new { ms = product.MaSP, url = Request.Url.ToString() })">

                                                    <img src="~/assets/img/gallery/favorit-card.png" alt="">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="popular-caption">
                                            <h3><a href="@Url.Action("Chitietsanpham","HOME",new { id= product.MaSP})">@product.TenSp</a></h3>
                                            <div class="rating mb-10">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                            <span>@product.DonGia VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- Button -->
                        <div class="row justify-content-center">
                            <div class="room-btn mt-20">
                                <div class="MenuTrang">

                                    @Html.PagedListPager(Model, page => Url.Action("Trang_PK", new { id = 1, page = page }))

                                </div>
                            </div>
                        </div>
                    </div>
                    <!--? New Arrival End -->
                </div>
            </div>

            <hr />
            @*<div class="row ">
                <div class="col-xl-12 col-lg-8 col-md-10">
                    <div class="section-tittle mb-50">
                        <h2 style="font:bold; text-align:center; color:#923761;">
                            SẢN PHẨM BÁN CHẠY
                        </h2>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container1">
                    <div class="row">
                        @Html.Action("SanphambanchayPartial", "HOME", new { id = 2, id1 = 3 })
                    </div>
                </div>
            </div>*@

        </div>
    </div>
</main>

<style type="text/css">
    .container1 {
        display: flex;
        width: 150%;
        padding: 4% 2%;
        box-sizing: border-box;
        height: 500px;
    }

    .box {
        flex: 1;
        overflow: hidden;
        transition: .5s;
        margin: 0 2%;
        box-shadow: 0 20px 30px rgba(0,0,0,.1);
        line-height: 0;
    }

        .box > a > img {
            width: 100%;
            height: calc(100% - 10vh);
            object-fit: cover;
            transition: .5s;
        }

        .box > a > span {
            font-size: 3.8vh;
            display: block;
            text-align: center;
            height: 10vh;
            line-height: 2.6;
        }

        .box:hover {
            flex: 1 1 10%;
        }

            .box:hover > a > img {
                width: 100%;
                height: 100%;
            }
</style>






