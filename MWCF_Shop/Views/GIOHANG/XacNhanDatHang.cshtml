
@{
    ViewBag.Title = "XacNhanDatHang";
    Layout = "~/Views/Shared/_LayoutGiohang.cshtml";
}



<main style="font-family:'Times New Roman';">

    <div class="page-notification" style="margin-bottom:0px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center" style="background:none; padding:0px; margin:0px;">
                            <li @*class="breadcrumb-item"*@><a href="~/Home/Index">Trang chủ</a></li>
                            <li @*class="breadcrumb-item"*@><a href="#">Xác nhận đặt hàng</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</main>
<div class="main-content-wrapper d-flex clearfix">


    <header class="header-area clearfix" style="font-family:'Times New Roman', Times, serif;">
        <!-- Close Icon -->
        <div class="nav-close">
            <i class="fa fa-close" aria-hidden="true"></i>
        </div>

        <nav class="amado-nav">
            <ul>

                <li><a href="shop.html">QUẦN & ÁO</a></li>
                <li><a href="product-details.html">PHỤ KIỆN</a></li>
                <li class="active"><a href="cart.html">GIÀY & DÉP</a></li>

            </ul>
        </nav>
        <!-- Button Group -->
        <div class="amado-btn-group mt-30 mb-100">
            <a href="#" class="btn amado-btn mb-15">%Discount%</a>
            <a href="#" class="btn amado-btn active">New this week</a>
        </div>
        <!-- Cart Menu -->
        <div class="cart-fav-search mb-100">
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </div>
    </header>

    <!-- Header Area End -->
    <div class="cart-table-area section-padding-100" style="font-family:'Times New Roman', Times, serif; padding-top:10px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="cart-title mt-50">
                        <h2 style="text-align:center;">XÁC NHẬT ĐẶT HÀNG</h2>
                    </div>

                    <div class="cart-table clearfix">
                        <h4>
                            Đơn hàng của quý khách đã được chúng tôi ghi nhận,chúng tôi sẽ liên hệ quý khách trong thời gian sớm nhất
                            và giao hàng đúng hẹn
                        </h4>

                        <p>
                            @Html.ActionLink("VỀ TRANG CHỦ", "Index", "HOME")
                        </p>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="cart-summary">


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


