
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model MWCF_Shop.Models.SANPHAM


@*<script src="~/ckeditor/ckeditor.js"></script>*@
<script src="https://cdn.tiny.cloud/1/rvt1c4e3h6r9h3z9d9rhddwydcn9o15cvz3keb7nt1b10mob/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#mytextarea'
    });
</script>
<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">CẬP NHẬT SẢN PHẨM</h2>

            @*Thêm thuộc tính cho form để upload ảnh *@
            @using (Html.BeginForm("Update", "Quanlysanpham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Mã sản phẩm:</label>
                <div class="col-md-10">
                    @*Chỉ hiển thị mã sách không cho sửa*@
                    <input type="text" size="70" name="iMaSP" value="@Model.MaSP" readonly />
                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-md-2">Tên sản phẩm:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="sTenSp" value="@Model.TenSp" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Mô tả:</label>
                <div class="col-md-10">
                    <textarea id="mytextarea" name="sMoTa">@Model.MoTa</textarea>

                    @*<script>
                    CKEDITOR.replace("description");
                </script>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Hình:</label>
                <div class="col-md-10">
                    <input style="width:500px;" type="file" name="fFileUpload" />
                    <img src="~/assets/img/gallery/@Model.Hinh" width="120"> (Ảnh hiện tại)
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ngày cập nhật:</label>
                <div class="col-md-10">
                    <input type="date" name="dNgayCapNhat" required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Tên danh mục sản phẩm</label>
                <div class="col-md-10">

                    @Html.DropDownList("MaDM")
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Loại sản phẩm</label>
                <div class="col-md-10">

                    @Html.DropDownList("MaLoai")
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Trạng thài sản phẩm</label>
                <div class="col-md-10">

                    @Html.DropDownList("MaTTSP")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số lượng:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="iSoLuong" value="@Model.SoluongBan" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Giá :</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="mGiaBan" value="@Model.DonGia" />
                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    <a href="@Url.Action("Index","Quanlysanpham")" class="btn btn-success" role="button">Trở về</a>
                </div>
            </div>
        </div>
            }


        </div>
    </section>
</div>

