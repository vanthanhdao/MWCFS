@model MWCF_Shop.Models.DANHMUC_SP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">Cập nhật danh mục sản phẩm</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaDM)

                    <div class="form-group">
                       Tên danh mục
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-success" />
                            <a href="@Url.Action("Index","Quanlydanhmuc")" class="btn btn-success" role="button">Trở về</a>
                        </div>
                    </div>
                </div>
            }

           
        </div>
    </section>
</div>
