@model IEnumerable<MWCF_Shop.Models.LOAISANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <h2 style="text-align:center;">Quản lý loại sản phẩm</h2>

            <p>
                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table" style="width:50%;">
                <tr>
                    <th>
                        Tên loại sản phẩm
                    </th>
                    <th>
                        Tên danh mục
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DANHMUC_SP.TenDM)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.MaLoai })" class="btn btn-warning" role="button">Cập nhật</a>

                            <a href="@Url.Action("Details",new {id=item.MaLoai})" class="btn btn-success" role="button">Chi tiết</a>

                            <button onclick="return confirm('Bạn muốn xóa loại sản phẩm này?')" type="button" class="btn btn-danger">
                                <a>
                                    @Html.ActionLink("Xóa", "DeleteConfirmed", new { id = item.MaLoai })
                                </a>
                            </button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>
</div>
<style>
    a {
        color: rgb(255 255 255 / 80%);
        text-decoration: none;
        background-color: transparent;
    }
</style>