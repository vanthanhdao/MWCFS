@model MWCF_Shop.Models.LOAISANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="content-wrapper">
    <section class="content">
        <div class="container">
            <div style="text-align:center; padding-top:20px;">

                <h1>XÁC NHẬN THÔNG TIN CẦN XÓA</h1>
                <h2>Bạn quyết định xóa loại sản phẩm này</h2>
            </div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên loại sản phẩm
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenLoai)
                </dd>

                <dt>
                    Tên danh mục sản phẩm
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DANHMUC_SP.TenDM)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a href="@Url.Action("Index","Quanlyloaisp")" class="btn btn-success" role="button">Trở về</a>
                </div>
            }
        </div>


    </section>
</div>
